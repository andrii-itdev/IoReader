<Window x:Class="IoReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IoReader"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        Height="650" 
        Width="800">
    <Window.DataContext>
        <local:ReaderWindowViewModel x:Name="MainWindowDataContext"/>

    </Window.DataContext>

    <DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   Background="SandyBrown"
                   DataContext="{Binding Frame}">
            <Button DockPanel.Dock="Left"
                    FontSize="22"
                    FontWeight="Bold"
                    Padding="10"
                    Content="Io" 
                    Command="{Binding CollapseRevealBookCommand}"
                    CommandParameter="{Binding ElementName=TheFrame}">
            </Button>
            
            <Grid>
            </Grid>
        </DockPanel>

        <ScrollViewer>
            <Grid Background="AntiqueWhite">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Frame x:Name="TheFrame"
                       Grid.Column="1" 
                       Margin="0,50,0,0"
                       Background="Bisque"
                       BorderBrush="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                       BorderThickness="1"
                       VerticalAlignment="Stretch"
                       DataContext="{Binding Frame, Mode=OneWayToSource}"
                       Source="Views/LibraryPage.xaml" />
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
