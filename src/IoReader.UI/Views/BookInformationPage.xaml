<Page x:Class="IoReader.Views.BookInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IoReader.Views"
      xmlns:viewmodels="clr-namespace:IoReader"
      xmlns:viewModels="clr-namespace:IoReader.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookInformationPage">
    <Page.DataContext>
        <viewModels:BookInformationViewModel x:Name="BookInformationDataContext"/>
    </Page.DataContext>

    <Grid>
        <TextBlock Text="Book Information"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Height="1000" />
    </Grid>
</Page>
